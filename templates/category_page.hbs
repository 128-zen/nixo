  {{!-- Main Content --}}
  <section class="category-page__content container section">
    <div class="category-page__sections">
      {{#each sections}}
      <div class="category-page__section fade-in-up">
        <div class="category-page__section-heading">
          <h3>{{name}}</h3>
          <a class="button button-secondary" href="{{url}}">{{t 'show_all_articles'}}</a>
        </div>
        <div class="category-page__articles">
          {{#each articles}}
            <div class="category-page__article">
              <div>
                <div class="meta-group">
                  {{#is created_at edited_at}}
                    <p class="meta-data">{{date created_at timeago=true}}</p>
                  {{else}}
                    <p class="meta-data">{{date edited_at timeago=true}}</p>
                  {{/is}}
                </div>
                <div>
                  <p class="short-name">{{author.name}}</p>
                  <img class="author-img" src="{{author.avatar_url}}">
                </div>
              </div>
              <h6><a href="{{url}}">{{title}}</a></h6>
              <div>{{body}}</div>
              <div>
                <a href="{{url}}"></a>
                {{t 'see_more'}}
                <div>
                  <img src="{{asset 'ball.png'}}" alt="icon">
                  <svg xmlns="http://www.w3.org/2000/svg" width="11" height="10" viewBox="0 0 11 10" fill="none">
                    <path d="M1.5 5H10.5M10.5 5L6.5625 1M10.5 5L6.5625 9" stroke="#222B27" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
      {{/each}}
    </div>
  </section>

